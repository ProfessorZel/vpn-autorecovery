####################################################
# БАЗОВЫЕ НАСТРОЙКИ МОНИТОРИНГА
####################################################

# Базовый интервал проверок в секундах (обязательный)
INTERVAL=30

# Пары серверов в формате DC:SRV через запятую (обязательный)
MAPPINGS=DC3:SRV4,DC1:SRV5

# Команда для выполнения при недоступности сервиса (обязательная)
COMMAND=systemctl restart network-service


####################################################
# НАСТРОЙКИ ПРОВЕРКИ ДОСТУПНОСТИ
####################################################

# URL для проверки SRV4 (обязательный для SRV4)
SRV4_URL=http://srv4.example.com/health

# URL для проверки SRV5 (обязательный для SRV5)
SRV5_URL=http://srv5.example.com/ping

# Количество попыток проверки перед признанием недоступности
CHECK_ATTEMPTS=3

# Задержка между попытками проверки в секундах
CHECK_RETRY_DELAY=1.0


####################################################
# НАСТРОЙКИ SSH ДЛЯ DC СЕРВЕРОВ
####################################################

# --- DC3 ---
DC3_SSH_HOST=dc3.example.com
DC3_SSH_PORT=22
DC3_SSH_USERNAME=admin
# Используйте либо пароль, либо путь к SSH ключу
DC3_SSH_PASSWORD=secure_password_here
#DC3_SSH_KEY_PATH=/path/to/dc3_key.pem

# --- DC1 ---
DC1_SSH_HOST=dc1.example.com
DC1_SSH_PORT=22
DC1_SSH_USERNAME=root
#DC1_SSH_PASSWORD=another_password_here
DC1_SSH_KEY_PATH=/path/to/dc1_key.pem


####################################################
# НАСТРОЙКИ EXPONENTIAL BACKOFF
####################################################

# Множитель увеличения интервала при сбоях (≥1.0)
BACKOFF_FACTOR=2.0

# Максимальный интервал проверки в секундах
MAX_INTERVAL=300


####################################################
# НАСТРОЙКИ TELEGRAM УВЕДОМЛЕНИЙ
####################################################

# Токен бота Telegram (обязательный)
TELEGRAM_BOT_TOKEN=1234567890:AAFmBbQdvwWCD2fI4u7Fk5Z1J2K3L4M5N6O7P

# ID чата/канала для уведомлений (обязательный)
TELEGRAM_CHAT_ID=-1001234567890


####################################################
# НАСТРОЙКИ ЛОГИРОВАНИЯ
####################################################

# Имя файла лога
LOG_FILE=/var/log/vpn-monitor/monitor.log

# Максимальный размер лог-файла в MB
LOG_MAX_SIZE=10

# Количество сохраняемых старых лог-файлов
LOG_BACKUP_COUNT=3

# Логировать успешные запросы (true/false)
LOG_SUCCESS_REQUESTS=false


####################################################
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
####################################################

# Таймаут HTTP запросов в секундах (по умолчанию 10)
#HTTP_TIMEOUT=10

# Таймаут SSH подключения в секундах (по умолчанию 10)
#SSH_TIMEOUT=10